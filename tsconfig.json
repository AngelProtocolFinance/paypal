{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020"],
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"noEmit": false,
		"emitDeclarationOnly": true,
		"types": ["node"]
	},
	"include": ["generated/**/*", "sdk/**/*", "helpers/**/*"],
	"exclude": ["node_modules", "dist", "scripts"]
}
