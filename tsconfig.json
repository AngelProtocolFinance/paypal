{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020"],
		"moduleResolution": "bundler",
		"declaration": true,
		"isolatedDeclarations": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "scripts"]
}
